    "babel-preset-stage-0": "^6.22.0",
    "highlight.js": "^9.10.0",
    "if-env": "^1.0.0",
    "prettier": "^1.2.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-element-to-jsx-string": "^6.3.0",
    "react-motion": "^0.4.7",
    "react-router": "^3.0.0",
    "react-syntax-highlighter": "^5.1.2",
    "styled-components": "2.0.0-7",
    "webpack": "^2.2.1"
